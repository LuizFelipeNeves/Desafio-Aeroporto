{
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "double", "avoid-escape"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-console": 0,
        "no-const-assign": 0,
        "no-param-reassign": 0,
        "no-unused-expressions": 0
    },
    "env": {
        "node": true,
        "browser": false,
        "mocha": true,
        "es6": true
    },
    "extends": "airbnb"
}
